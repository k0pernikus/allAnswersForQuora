{
    "manifest_version": 2,
    "name": "Read Quora Pages",
    "version": "0.1",
    "description": "Will add the `share=1` to any quora.com question so you will not be bothered by the extremly annoying oh-register-now-you-fool layer anymore and all the answers will be readable",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "*://www.quora.com/*"
    ],
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://www.quora.com/*"],
            "js": ["content.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}
